// tsconfig.json
{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",                  // Target a recent Node.js version for less transpilation.
    "lib": ["es2022"],                   // Include only necessary standard library types.
    "module": "node16",                  // Use Node.js's ES Module resolution for clarity and future-proofing.
    "moduleResolution": "node16",        // Align module resolution with module option.
    "esModuleInterop": true,             // Enable Babel-like transpilation for ES and CommonJS interop.
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased file names.

    /* Strictness */
    "strict": true,                      // Enable all strict type-checking options. This is a shortcut for:
    "noUnusedLocals": true,              // Report errors on unused local variables.
    "noUnusedParameters": true,          // Report errors on unused parameters.
    "noImplicitReturns": true,           // Report error when not all code paths in a function return a value.
    "noFallthroughCasesInSwitch": true,  // Report errors for fallthrough cases in switch statements.
    "noUncheckedIndexedAccess": true,    // Add 'undefined' to the type of indexed access. (Very strict!)
    "exactOptionalPropertyTypes": true,  // Treat optional properties as truly optional (undefined only, no null). (Very strict!)
    "noPropertyAccessFromIndexSignature": true, // Discourage dot access for properties declared via index signatures.
    "noImplicitOverride": true,          // Ensure 'override' keyword is used for overriding class members.
    "allowUnusedLabels": false,          // Report errors when unused labels are encountered.
    "allowUnreachableCode": false,       // Report errors for unreachable code.
    "useUnknownInCatchVariables": true,  // Change the default type of 'error' in catch clauses from 'any' to 'unknown'. (Recommended)

    /* Emit */
    "outDir": "./dist",                  // Where to output the compiled JavaScript.
    "rootDir": "./src",                  // The root directory of your TypeScript source files.
    "sourceMap": true,                   // Generate source maps for debugging.
    "declaration": false,                // Don't generate .d.ts files for application code (only for libraries).
    "declarationMap": false,             // Don't generate .d.ts.map files.
    "removeComments": true,              // Remove comments from the compiled JavaScript.
    "noEmitOnError": true,               // Do not emit output when compilation errors are present.

    /* Module Resolution */
    "baseUrl": "./",                     // This must be set if "paths" are configured.
    "paths": {
      // Example: "@utils/*": ["./src/utils/*"] // For absolute imports, if desired
    },

    /* Performance and Caching */
    "incremental": true,                 // Enable incremental compilation (faster rebuilds).
    "tsBuildInfoFile": "./.tsbuildinfo"  // Store .tsbuildinfo file in project root.
    // "assumeChangesOnlyAffectDirectDependencies": true, // Potentially faster, but can miss some errors in complex projects.
                                                        // Use with caution and thorough testing.
  },
  "include": ["src/**/*.ts"],           // Files to include for compilation.
  "exclude": ["node_modules", "dist"]   // Directories to exclude from compilation.
}