// tsconfig.json
{
  "compilerOptions": {
    "target": "esnext",                // Or a newer version like "es2023", "esnext"
    "module": "esnext",              // Or "node16", "nodenext" for ESM in Node.js
    "outDir": "./dist",                // Where compiled JS goes
    "rootDir": "./src",                // Where your TS source code lives
    "strict": true,                    // Enable all strict type-checking options
    "esModuleInterop": true,           // Important for mixed ES Module/CommonJS imports
    "skipLibCheck": true,              // Skip type checking of all declaration files (*.d.ts)
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
    "sourceMap": true                  // Generate source maps for debugging
  },
  "include": ["src/**/*.ts"],          // Only include files in the src directory
  "exclude": ["node_modules", "dist"]  // Exclude these directories from compilation
}